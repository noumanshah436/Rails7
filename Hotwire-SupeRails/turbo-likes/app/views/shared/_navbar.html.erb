<div class="navbar-links">
  <% if user_signed_in? %>
    <!-- If the user is signed in, display the Logout button -->
    <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %>
  <% else %>
    <!-- If the user is not signed in, display the Login and Signup buttons -->
    <%= link_to "Login", new_user_session_path, class: "nav-link" %>
    <%= link_to "Signup", new_user_registration_path, class: "nav-link" %>
  <% end %>
</div>
<style>
  /* Align navbar links horizontally */
  .navbar-links {
  display: flex;
  align-items: center;
  }

  /* Add some spacing between the links */
  .navbar-links .nav-link {
  margin-right: 10px; /* Adjust this value to control the spacing */
  }
</style>
