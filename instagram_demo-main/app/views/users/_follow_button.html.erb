<%= turbo_frame_tag(dom_id(@user)) do %>
  <% if following?(@user)%>
    <%= button_to "Unfollow", user_unfollow_path(id: @user.id), method: :delete, class:'btn btn-danger'%>
  <% else %>
    <%= button_to "follow", user_follow_path(id: @user.id), method: :post, class:'btn btn-primary' %>
  <% end %>
<% end %>
